<Window x:Class="ExceptionViewerDemo.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ExceptionViewer Demo"
        Width="300"
        Height="300"
        WindowStartupLocation="CenterScreen">
    <Window.Style>
        <Style>
            <Setter Property="Window.Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Offset="1" Color="Bisque" />
                        <GradientStop Offset="0" Color="Beige" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Style>
    <StackPanel>
        <Button Name="btnViewException"
                Width="100"
                Height="23"
                Margin="12,12,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnViewException_Click">
            View Exception
        </Button>

        <Button Width="100"
                Height="23"
                Margin="12,12,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="killMe">
            Kill my app
        </Button>
    </StackPanel>
</Window>