<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="ExceptionViewerBackgroundColor">#333333</Color>
    <Color x:Key="ExceptionViewerForegroundColor">White</Color>
    <Color x:Key="ExceptionViewerHighlightColor">#555555</Color>

    <SolidColorBrush x:Key="ExceptionViewerBackgroundBrush"
                     Color="{DynamicResource ExceptionViewerBackgroundColor}" />

    <SolidColorBrush x:Key="ExceptionViewerForegroundBrush"
                     Color="{DynamicResource ExceptionViewerForegroundColor}" />

    <SolidColorBrush x:Key="ExceptionViewerHighlightBrush"
                     Color="{DynamicResource ExceptionViewerHighlightColor}" />
</ResourceDictionary>