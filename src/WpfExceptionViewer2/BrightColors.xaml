<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="ExceptionViewerBackgroundColor">WhiteSmoke</Color>
    <Color x:Key="ExceptionViewerForegroundColor">Black</Color>
    <Color x:Key="ExceptionViewerHighlightColor">#999999</Color>

    <SolidColorBrush x:Key="ExceptionViewerBackgroundBrush"
                     Color="{DynamicResource ExceptionViewerBackgroundColor}" />

    <SolidColorBrush x:Key="ExceptionViewerForegroundBrush"
                     Color="{DynamicResource ExceptionViewerForegroundColor}" />

    <SolidColorBrush x:Key="ExceptionViewerHighlightBrush"
                     Color="{DynamicResource ExceptionViewerHighlightColor}" />
</ResourceDictionary>